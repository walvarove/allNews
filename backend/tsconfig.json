{
  "compilerOptions": {
    "target": "es2017",                                 
    "module": "commonjs",                               
    "allowSyntheticDefaultImports": true,            
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                     
    "skipLibCheck": true,                                
    "outDir": "dist",
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
